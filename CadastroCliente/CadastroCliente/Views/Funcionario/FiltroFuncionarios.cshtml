@{
    ViewBag.Title = "filtro funcionário";
}

@model CadastroCliente.Models.ViewModels.FuncionarioFiltroViewModel


@using (Html.BeginForm("ListarFuncionarios", "Funcionario", FormMethod.Get))
{

    <div class="form-horizontal">
        <h4>Filtrar funcionários</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control " } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DtNascimentoDe, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" name="DtNascimentoDe" id="DtNascimentoDe" class="form-control col-md-2" style="width: 20%" />

                @Html.Label("Até", htmlAttributes: new { @class = "control-label col-md-1", @style = "width: 5%" })

                <input type="date" name="DtNascimentoAte" id="DtNascimentoAte" class="form-control col-md-2" style="width: 20%" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DtCadastroDe, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" name="DtCadastroDe" id="DtCadastroDe" class="form-control col-md-2" style="width: 20%" />

                @Html.Label("Até", htmlAttributes: new { @class = "control-label col-md-1", @style = "width: 5%" })

                <input type="date" name="DtCadastroAte" id="DtCadastroAte" class="form-control col-md-2" style="width: 20%" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Listar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

    <div>
        @Html.ActionLink("Voltar", "Index", "Home")
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
